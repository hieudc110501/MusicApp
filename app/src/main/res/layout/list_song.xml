<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutMusic"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_song"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:id="@+id/info_song"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_song"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See You Again"
                android:textColor="@color/white"
                android:textSize="16sp">
            </TextView>

            <TextView
                android:id="@+id/txt_singer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wiz Khalifa, Charlie Puth"
                android:textColor="@color/singer_name">
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_button"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/relativeLayoutMusic"
        android:padding="10dp"
        tools:ignore="TouchTargetSizeCheck">
    </ImageView>

    <TextView
        android:id="@+id/textViewOptions"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="&#8942;"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/img_button"
        android:textAppearance="?android:textAppearanceLarge" />
</RelativeLayout>